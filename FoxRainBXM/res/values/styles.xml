<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/bg_top_title_pp</item>
    </style>

    <!--
    <style name="input_label">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000</item>
    </style>
    -->

    <style name="input_edit" parent="input_label">
        <item name="android:singleLine">true</item>
    </style>

    <style name="input_cnt">
        <item name="android:textColor">#BBB</item>
    </style>

    <style name="content_icos">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#AFAFAF</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="VerticalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#FFCCCCCC</item>
    </style>
    <!-- 입력 레이블 , 마이포인트 -->
    <style name="input_label">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 입력 -->
    <style name="input">
        <item name="android:textSize">9pt</item>
        <item name="android:textColor">#A3A3A3</item>
    </style>
    <!-- 입력 -->
    <style name="black_bar_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">9pt</item>
        <item name="android:textColor">#e9e6eb</item>
    </style>
    <!-- 목록 내용, 글자수 카운트 -->
    <style name="content_preview">
        <item name="android:textSize">7.5pt</item>
        <item name="android:textColor">#7a7a7a</item>
    </style>

    <!-- 입력 _한줄 -->
    <style name="input_single" parent="content_preview">
        <item name="android:singleLine">true</item>
    </style>

    <style name="TransDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@+android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@+android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>