<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/bg_pop_out"
	    android:orientation="vertical" >

	    <TextView
	        android:id="@+id/txtMessage"
	        android:layout_width="190dp"
	        android:layout_height="60dp"
	        android:layout_centerInParent="true"
	        android:gravity="center"
	        android:text="여우비 로그아웃을 \n하시겠습니까?"
	        android:textColor="#222222"
	        android:textSize="12sp" />
	</RelativeLayout>
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
		<Button
		    android:id="@+id/btnPopup0"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/selector_btn_pop1"
		    android:text="네"
		    android:textColor="#ffffff"
		    android:textSize="12sp" />

		<Button
		    android:id="@+id/btnPopup1"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/selector_btn_pop2"
		    android:text="아니오"
		    android:textColor="#ffffff"
		    android:textSize="12sp" />

	</LinearLayout>
</LinearLayout>
