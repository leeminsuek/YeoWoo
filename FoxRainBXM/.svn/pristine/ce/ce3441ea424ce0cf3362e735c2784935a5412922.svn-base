<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/pop_box_bg_pswd"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp" >

        <TextView
            android:id="@+id/kakaostory_link"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="카카오스토리로 공유"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="#222222"
            android:textStyle="bold" />

        <View
            android:id="@+id/pad_view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />
        
        <TextView
            android:id="@+id/kakaotalk_link"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="카카오톡으로 공유"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="#222222"
            android:textStyle="bold" />

        <View
            android:id="@+id/pad_view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />
        
        <TextView
            android:id="@+id/facebook_link"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="페이스북으로 공유"
            android:visibility="visible"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="#222222"
            android:textStyle="bold" />
        
        </LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >

		<Button
		    android:id="@+id/btnPopup0"
		    android:layout_width="fill_parent"
		    android:layout_height="60dp"
		    android:background="@drawable/selector_pop_btn_ok"
		    android:text="취소"
		    android:textAppearance="?android:attr/textAppearance"
		    android:textColor="#ffffff"
		    android:textStyle="bold" />

	</LinearLayout>
</LinearLayout>
