<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bar_black" >

        <ImageView
            android:id="@+id/btnTitleBack"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:adjustViewBounds="false"
            android:scaleType="fitStart"
            android:src="@drawable/selector_ico_title_back" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="비밀번호 변경하기"
            android:textColor="#e9e6eb"
            android:textStyle="bold" />
    </RelativeLayout>

    <com.foxrainbxm.jjlim.libary.CustomEditText
        android:id="@+id/editOld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/intup_box_join"
        android:hint="기존 비밀번호를 입력해주세요."
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="12sp" >
    </com.foxrainbxm.jjlim.libary.CustomEditText>

    <com.foxrainbxm.jjlim.libary.CustomEditText
        android:id="@+id/editNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/intup_box_join"
        android:hint="변경할 비밀번호를 입력해주세요."
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="12sp" >
    </com.foxrainbxm.jjlim.libary.CustomEditText>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/btnChangePassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_btn_change" />
    </RelativeLayout>

</LinearLayout>