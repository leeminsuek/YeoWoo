<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@color/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bar_black" >

        <ImageView
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/title_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="글쓰기"
            android:textColor="#fff" />

        <ImageView
            android:id="@+id/title_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/title_ok" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btnlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titlebar"
        android:background="@drawable/bg_top_title_pp" >

        <ImageView
            android:id="@+id/urllink"
            android:layout_width="30dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/ico_write_link" />

        <ImageView
            android:id="@+id/video"
            android:layout_width="30dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_toLeftOf="@id/urllink"
            android:background="@drawable/ico_write_video" />

        <ImageView
            android:id="@+id/camera"
            android:layout_width="30dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dip"
            android:layout_toLeftOf="@id/video"
            android:background="@drawable/ico_write_camera" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/thumbnailContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingBottom="10dip" >

        <View
            style="@style/VerticalDivider"
            android:layout_width="match_parent" />

        <RelativeLayout
            android:id="@+id/thumbnail1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dip"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/btnAdd"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dip"
                android:adjustViewBounds="false"
                android:background="@drawable/btn_add"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/btnAddDel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dip"
                android:adjustViewBounds="false"
                android:src="@drawable/btn_add_del"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/thumbnail2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/thumbnail1"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/btnAdd2"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dip"
                android:adjustViewBounds="false"
                android:background="@drawable/btn_add"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/btnAddDel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dip"
                android:adjustViewBounds="false"
                android:background="@drawable/btn_add_del"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/thumbnail3"
               android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/thumbnail2"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/btnAdd3"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dip"
                android:adjustViewBounds="false"
                android:background="@drawable/btn_add"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/btnAddDel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dip"
                android:adjustViewBounds="false"
                android:background="@drawable/btn_add_del"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/thumbnail4"
               android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/thumbnail3"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/btnAdd4"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dip"
                android:adjustViewBounds="false"
                android:background="@drawable/btn_add"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/btnAddDel4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dip"
                android:adjustViewBounds="false"
                android:background="@drawable/btn_add_del"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/thumbnail5"
           android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/thumbnail4"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/btnAdd5"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dip"
                android:adjustViewBounds="false"
                android:background="@drawable/btn_add"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/btnAddDel5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dip"
                android:adjustViewBounds="false"
                android:background="@drawable/btn_add_del"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/titlelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/thumbnailContainer"
        android:layout_below="@id/btnlayout"
        android:layout_marginTop="10dip"
        android:orientation="vertical"
        android:padding="5dip" >

        <EditText
            android:id="@+id/titlearea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/intup_box_title"
            android:gravity="center_vertical"
            android:hint="제목"
            android:paddingLeft="5dip"
            android:singleLine="true"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/contentarea"
            android:layout_width="match_parent"
            android:layout_height="300dip"
            android:layout_marginTop="20dip"
            android:background="@drawable/intup_box_content"
            android:gravity="left|top"
            android:hint="내용을 입력하세요"
            android:paddingLeft="5dip"
            android:paddingTop="10dip"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>